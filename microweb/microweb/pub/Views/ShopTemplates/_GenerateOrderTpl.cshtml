<script type="text/mustache-template" id="GenerateOrderSuccessTemplate">
    {{#Orderinfo}}

    <dl class="flex"><dt>订单号：</dt><dd class="fd-msy fd-black">{{OrderNumber}}</dd></dl>
    <dl class="flex"><dt>订单金额：</dt><dd class="fd-msy fd-pink fd_thick">￥{{ShouldPayPrice}}</dd></dl>
    <input type="hidden" id="txt_OrderNumber" value="{{OrderNumber}}" />
    <input type="hidden" id="txt_ShouldPayPrice" value="{{ShouldPayPrice}}" />
    <input type="hidden" id="txt_OrderInfoGuid" value="{{Guid}}" />

    {{/Orderinfo}}
</script>

