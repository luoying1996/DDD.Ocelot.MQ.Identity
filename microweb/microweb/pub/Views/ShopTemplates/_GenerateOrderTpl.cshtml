<script type="text/mustache-template" id="GenerateOrderTemplate">
    {{>header}}

    <div data-role="content" class="pt3m">
        <div data-role="controlgroup" class="mb7m">
            <article>
                <section>
                    <div class="white mt5m orderDail_inf">
                        <div class="orderDail_bord orderDail_text " id="orderinfodetaildiv">

                        </div>
                    </div>
                    <div class="white mt5m orderDail_inf">
                        <dl class="flex fill_mold">
                            <dt>支付方式</dt>
                            <dd class="flex_div">
                                <select id="MakePayment"></select>
                            </dd>
                        </dl>
                    </div>
                    <div class="mt1m pdrd">
                        <a onclick="addPayment()" class="pink field_btn">确认支付</a>
                    </div>
                </section>
